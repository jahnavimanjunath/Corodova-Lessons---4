<?xml version='1.0' encoding='utf-8'?>
<widget id="com.learn.cordovaSplash" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Splash</name>
    <description>
      To display the splash screen
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<preference name="SplashScreen" value="splash" />
	<preference name="SplashScreenDelay" value="10000" />
	<preference name="show-splash-screen-spinner" value="true" />
	<preference name="auto-hide-splash-screen" value="true" />
		
    <platform name="android">
        <allow-intent href="market:*" />
		<splash src="res/drawable-land-hdpi/splash.png" density="land-hdpi"/>
		<splash src="res/drawable-land-ldpi/splash.png" density="land-ldpi"/>
		<splash src="res/drawable-land-mdpi/splash.png" density="land-mdpi"/>
		<splash src="res/drawable-land-xhdpi/splash.png" density="land-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
